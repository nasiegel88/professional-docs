#!/bin/bash

# Stop on fail!
set -e

# Load library
Rscript -e "library('devtools')" 
Rscript -e "library('extrafont')"

# Install GitHub packages
Rscript -e "remotes::install_version('Rttf2pt1', version = '1.3.8')"

# Build commands
Rscript -e "ttf_import(paths = '~/fonts', recursive = TRUE, pattern = NULL)"